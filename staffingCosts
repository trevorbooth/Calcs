<script>
 function calc() {
 var base = document.getElementById("base").value;
 var employees = document.getElementById("employees").value;
 //Compares percentages on hourly
 document.getElementById("baseBill").innerHTML = (+base * 1.4).toFixed(2);
 document.getElementById("taxBill").innerHTML = (+base * .173).toFixed(2);
 document.getElementById("fringeBill").innerHTML = (+base * .304 ).toFixed(2);
 document.getElementById("recBill").innerHTML = (+base * .12 ).toFixed(2);
 document.getElementById("trainBill").innerHTML = (+base * .13 ).toFixed(2);
 document.getElementById("termBill").innerHTML = (+base * .02 ).toFixed(2);
 document.getElementById("adminBill").innerHTML = (+base * .151 ).toFixed(2);
 document.getElementById("total").innerHTML = ((+base * .898) + +base).toFixed(2);
 document.getElementById("ourTotal").innerHTML = (+base * 1.4).toFixed(2);
 //Total Savings 
 document.getElementById("perHour").innerHTML = (((+base * .898) + +base) - (+base * 1.4)).toFixed(2);
 document.getElementById("perMonth").innerHTML = ((((+base * .898) + +base) - (+base * 1.4)) * 173.33).toFixed(2);
 document.getElementById("perYear").innerHTML = (((((+base * .898) + +base) - (+base * 1.4)) * 173.33) * 12).toFixed(2);
 //Multiplies the Number of Employees
 document.getElementById("employeesBill").innerHTML = ((((((+base * .898) + +base) - (+base * 1.4)) * 173.33) * 12) * employees).toFixed(2); 
}
</script>
